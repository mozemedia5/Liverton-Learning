rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is platform admin
    function isPlatformAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'platform_admin';
    }
    
    // Helper function to check if user is school admin
    function isSchoolAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'school_admin';
    }
    
    // Users collection - Platform admins can read all, others can only read their own
    match /users/{userId} {
      // Platform admins can read and write any user
      allow read, write: if isPlatformAdmin();
      
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow create during registration
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Hanna AI Chat Sessions
    match /hannaChats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/hannaChats/$(chatId)).data.userId;
        allow create: if request.auth != null;
      }
    }
    
    // Regular Chat Sessions
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId;
        allow create: if request.auth != null;
      }
    }
    
    // Public Data
    match /public_data/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Announcements
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Documents - allow authenticated users
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Courses - allow authenticated users to read
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (isPlatformAdmin() || isSchoolAdmin());
    }
    
    // Default allow authenticated users to read/write their own data
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
